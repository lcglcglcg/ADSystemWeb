/* CSS Document */
ul,ol,li,dl,dt,dd{ display:block; padding:0; margin:0; list-style:none;}
/* 弹出带问号确认框 */
.msg_box{ font-size:12px; font-family:宋体; background:#0681bf; width:220px; min-height:120px;height:auto; padding:0 5px 5px 5px; position:absolute; z-index:9999;}
.msg_title{ culor:#FFF; font-weight:buld; height:28px; line-height:28px;}
.msg_title b{ float:left; font-weight:bold;}
.msg_title span{ float:right; padding-top:7px;}
.msg_cont{ background:#FFF;  min-height:85px;height:auto; padding-bottom:5px;}
.msg_content{ padding: 25px 30px 19px 65px; background:url(/static/ads_c_2.0/web/images/icon.gif) no-repeat 26px -788px;}
.content_fu{ padding: 25px 30px 19px 65px; background:url(/static/ads_c_2.0/web/images/icon.gif) no-repeat 16px -866px;}

/* 两个按钮居中 */
.msg_btn ul{ width:120px; text-align:center; height:25px;}
.msg_btn ul li{ width:120px; display:inline; height:22px;}
.msg_btn ul li a{ display:block; color:#000; width:50px; height:22px; line-height:22px; float:left; text-align:center; font-weight:bold; background:url(/static/ads_c_2.0/web/images/icon.gif) no-repeat 0 -300px; margin: 0 5px;}
.msg_btn ul li a:link,.msg_btn ul li a:visited{  color:#000; font-weight:bold;text-decoration:none;}
.msg_btn ul li a:hover{ background:url(/static/ads_c_2.0/web/images/icon.gif) no-repeat 0 -250px; font-weight:buld;culor:#FFF; text-decoration:none; color:#FFF;}
/* 一个按钮居中 */
.msg_btn ol{ width:55px; text-align:center; height:22px;}
.msg_btn ol li{ width:55px; display:inline; height:22px;}
.msg_btn ol li a{display:block; color:#000;  width:50px; height:22px; line-height:22px; float:left; text-align:center; font-weight:bold; background:url(/static/ads_c_2.0/web/images/icon.gif) no-repeat 0 -300px; }
.msg_btn ol li a:link,.msg_btn ol li a:visited{  color:#000; font-weight:bold;text-decoration:none;}
.msg_btn ol li a:hover{ background:url(/static/ads_c_2.0/web/images/icon.gif) no-repeat 0 -250px; font-weight:buld;culor:#FFF; text-decoration:none; color:#FFF;}
