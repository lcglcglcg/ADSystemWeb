/* CSS Document */
*{margin:0px;padding:0px;}
body{font-family:"宋体";font-size:12px;color:#000;background:#FFF; min-width:1000px;_width:expression((document.documentElement.clientWidth < 1000) ? "1000px":"auto");}
div,ul,ol,li,dl,dt,dd,form{ margin:0; padding:0;}
ul,ol,li,dl,dt,dd{ display:block; list-style:none;}
img,a img{border:none;}
a:visited{ color:#00F; text-decoration:none;}
a:link{ text-decoration:none;}
a:hover{ text-decoration:underline; cursor:pointer;}
b{ display:block; width:75px; height:30px;float:right; margin-right:12px; background:url(/static/ads_m_1.0/web/images/icon.gif) no-repeat 0 -750px; font-weight:normal; text-align:center;}
/* 登陆界面 */
.l_box{ width:361px; height:513px; margin:0 auto; background:url(/static/ads_m_1.0/web/images/login_bg.gif) no-repeat; padding:270px 303px 0 336px}
.l_box ul{ overflow:hidden;}
.l_box ul li{ height:32px; line-height:32px; margin-bottom:10px;}
.l_box ul li span{ display::block; float:left; height:32px; line-height:32px; color:#e3f2fc; font-weight:bold; font-size:18px;}
.l_box ul li input{ height:32px; width:272px; border:none; line-height:32px; background:url(/static/ads_m_1.0/web/images/input_bg_01.gif) no-repeat; font-size:16px; padding-left:3px;}
.l_box ul li .v_code{ width:181px; background:url(/static/ads_m_1.0/web/images/input_bg_02.gif) no-repeat; float:left;}
/* 按钮 */
.l_box ul .l_btn{ height:90px; margin:23px 0 0 135px;}
.l_box ul .l_btn input{width:84px; background:none;}
.l_box ul .l_btn a{ display:block; height:35px; width:84px;background:url(/static/ads_m_1.0/web/images/l_bnt_01.gif); text-decoration:none;}
.l_box ul .l_btn a:hover{ display:block; height:35px; width:84px; background:url(/static/ads_m_1.0/web/images/l_bnt_02.gif); text-decoration:none;}
